  <!-- Prosty generator kart: dopisz wiersz w tablicy, a karta pojawi się sama -->
  <script>
    // 1) TU DOPISUJESZ/NADPISUJESZ ELEMENTY
    //    Zwróć uwagę na poprawne ścieżki i wielkość liter w nazwach.
    const items = [
      { src: "images/kobieta-glowa-1.png", title: "Kobieta – głowa 1" },
      { src: "images/kobieta-glowa-2.png", title: "Kobieta – głowa 2" },
      { src: "images/kobieta-glowa-3.png", title: "Kobieta – głowa 3" },

      // Przykłady – usuń lub nadpisz swoimi:
      // { src: "images/kobieta-glowa-4.png", title: "Kobieta – głowa 4" },
      // { src: "images/kobieta-glowa-5.jpg", title: "Kobieta – głowa 5" },
      // { src: "images/kobieta-glowa-6.webp", title: "Kobieta – głowa 6" },
    ];

    // 2) GENEROWANIE SIATKI
    const grid = document.getElementById("grid");

    function cardHTML({src, title}) {
      // Otwieramy obraz w nowej karcie (pełny rozmiar)
      return `
        <figure class="card">
          <img class="thumb" src="${src}" alt="${title}" loading="lazy" decoding="async" />
          <figcaption class="label">Głowa • Szyja</figcaption>
          <div class="name">${title}</div>
          <a href="${src}" target="_blank" rel="noopener" aria-label="Otwórz: ${title}"></a>
        </figure>
      `;
    }

    grid.innerHTML = items.map(cardHTML).join("");
  </script>
